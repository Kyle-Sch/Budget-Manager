@model ExpensePost

@{
    ViewData["Title"] = "Expense List";
}

<h2> Expenses </h2>

<a asp-controller="Income" asp-action="NewIncome" method="get">Post a New Source of Income</a>

<div style="margin-top:.895em">
    @{
        bool isColored = false;
        string coloredClass = "";
        for (int i = 0; i < Model.Results.Count; i++) {
            if (Model.Results[i].IsActive) {
                coloredClass = (isColored) ? "AllParksColoredTile" : "";
                <div class="@coloredClass">
                    <div class="AllParksInfo">
                        <h4><b>@Model.Results[i].ExpenseDescription</b></h4>
                        <p>@Model.Results[i].ExpenseCategory - @Model.Results[i].ExpenseAmount</p>
                        <form asp-controller="Expense" asp-action="BudgetSelect" method="post">
                            <label asp-for="BudgetId" hidden="hidden">Detail Mode: </label>
                            <input asp-for="BudgetId" value="@Model.Results[i].BudgetId" hidden="hidden" />
                            <input type="submit" value="Detail Mode" />
                        </form>
                        <form asp-controller="Expense" asp-action="Remove" method="get">
                            <label asp-for="BudgetId" hidden="hidden">Detail Mode: </label>
                            <input asp-for="BudgetId" value="@Model.Results[i].BudgetId" hidden="hidden" />
                            <input type="submit" value="Detail Mode" />
                        </form>
                    </div>
                </div>
                isColored = !isColored;
            }
        }
    }
</div>
